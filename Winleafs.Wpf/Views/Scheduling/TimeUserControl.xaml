<UserControl x:Class="Winleafs.Wpf.Views.Scheduling.TimeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Winleafs.Wpf.Views.Scheduling"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>        
        <ListBox Style="{StaticResource MaterialDesignFilterChipOutlineListBox}" x:Name="RadioButtonGroupChoiceChipOutline">
            <ListBoxItem Width="150" FontSize="20">Fixed time</ListBoxItem>
            <ListBoxItem IsSelected="True" Width="150" FontSize="20">Sunset</ListBoxItem>
            <ListBoxItem Width="150" FontSize="20">Sunrise</ListBoxItem>
        </ListBox>
    </Grid>
</UserControl>
